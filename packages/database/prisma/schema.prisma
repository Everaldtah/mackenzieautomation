// Family Support Platform Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  firstName     String
  lastName     String
  phone         String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  intakes       Intake[]
  bookings      Booking[]
  referrals     Referral[]
  externalSignals ExternalSignal[]

  @@map("users")
}

enum UserRole {
  USER
  STAFF
  ADMIN
  SUPER_ADMIN
}

enum ServiceType {
  FAMILY_MEDIATION
  SOCIAL_WORK_ASSESSMENT
  THERAPEUTIC_SUPPORT
  MCKENZIE_FRIEND
  EMERGENCY_SUPPORT
  TRAINING_WORKSHOP
  OTHER
}

enum ContactMethod {
  EMAIL
  PHONE
  SMS
  WHATSAPP
  POST
}

enum ClientArchetype {
  SELF_REP_LITIGANT
  DISTRESSED_PARENT
  LEGAL_ADVICE_SEEKER
  COURT_IMMINENT
  FINANCIAL_CONSTRAINT
  COMPLEX_CASE
  OTHER
}

enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
  WAIVED
}

enum DraftStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  EDITED
  REJECTED
  SENT
}

// Client Intake
model Intake {
  id              String          @id @default(uuid())
  userId          String
  clientFirstName String
  clientLastName  String
  clientEmail     String?
  clientPhone     String?
  dateOfBirth     DateTime?
  address         String?
  city            String?
  postcode        String?
  concerns        String          @db.Text
  serviceType     ServiceType?
  contactMethod   ContactMethod?
  hearingDate     DateTime?
  courtName       String?
  archetype       ClientArchetype?
  urgencyLevel    Urgency         @default(MEDIUM)
  urgencyScore    Int             @default(0)
  status          IntakeStatus    @default(PENDING)
  notes           String?         @db.Text
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings        Booking[]

  @@map("intakes")
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IntakeStatus {
  PENDING
  QUALIFIED
  ASSESSMENT
  APPROVED
  REJECTED
  CLOSED
}

// Booking Management
model Booking {
  id            String        @id @default(uuid())
  userId        String
  clientId      String?
  intakeId      String?
  serviceType   ServiceType
  scheduledAt   DateTime
  duration      Int           @default(60) // minutes
  price         Decimal       @db.Decimal(10, 2) @default(0)
  status        BookingStatus @default(SCHEDULED)
  paymentStatus PaymentStatus @default(PENDING)
  notes         String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  intake        Intake?       @relation(fields: [intakeId], references: [id], onDelete: SetNull)

  @@map("bookings")
}

enum BookingStatus {
  SCHEDULED
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// Referral System
model Referral {
  id                String         @id @default(uuid())
  userId            String
  referrerId        String?
  clientName        String
  clientEmail       String?
  clientPhone       String?
  serviceRequested  String
  referredTo        String
  referralDate      DateTime      @default(now())
  status            ReferralStatus @default(PENDING)
  responseReceived  Boolean       @default(false)
  notes             String?       @db.Text
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("referrals")
}

enum ReferralStatus {
  PENDING
  SENT
  ACCEPTED
  DECLINED
  FOLLOW_UP_REQUIRED
  CONVERTED
  CLOSED
}

// External Signals (Lead Discovery)
model ExternalSignal {
  id                  String           @id @default(uuid())
  userId              String?
  platformSource      String
  platformPostId      String?
  platformUrl         String?
  authorUsername      String?
  content             String           @db.Text
  contentHash         String?          @unique
  postedAt            DateTime?
  distressLevel       DistressLevel    @default(LOW)
  hearingMentioned    Boolean          @default(false)
  timeframeDetected   String?
  selfRepSignal       Boolean          @default(false)
  safeguardingKeywords String[]        @default([])
  urgencyScore        Int              @default(0)
  aiSummary           String?          @db.Text
  classification      SignalClassification?
  status              SignalStatus     @default(NEW)
  reviewedBy          String?
  reviewedAt          DateTime?
  processedAt         DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  user                User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  outreachDrafts      OutreachDraft[]
  outreachActions     OutreachAction[]

  @@map("external_signals")
}

enum DistressLevel {
  LOW
  MEDIUM
  URGENT
}

enum SignalClassification {
  FAMILY_NEED
  HOUSING_CRISIS
  FOOD_INSECURITY
  MENTAL_HEALTH
  CHILD_WELFARE
  DOMESTIC_ABUSE
  FINANCIAL_HELP
  ELDERLY_CARE
  DISABILITY_SUPPORT
  OTHER
}

enum SignalStatus {
  NEW
  DETECTED
  UNDER_REVIEW
  REVIEWING
  APPROVED
  REJECTED
  RESPONDED
  OUTREACH_SENT
  CONVERTED
  ARCHIVED
}

// Service Information
model Service {
  id                String    @id @default(uuid())
  name              String
  slug              String    @unique
  description       String    @db.Text
  category          String
  order             Int       @default(0)
  contactEmail      String?
  contactPhone      String?
  website           String?
  address           String?
  city              String?
  postcode          String?
  isActive          Boolean   @default(true)
  archetypeTarget   String?
  urgencyTrigger    Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("services")
}

// Analytics Tracking
model AnalyticsEvent {
  id          String   @id @default(uuid())
  eventType   String
  userId      String?
  metadata    Json?
  timestamp   DateTime @default(now())

  @@map("analytics_events")
}

// Event Log for audit trail
model EventLog {
  id          String   @id @default(uuid())
  eventType   String
  intakeId    String?
  referralId  String?
  signalId    String?
  bookingId   String?
  payload     Json?
  createdAt   DateTime @default(now())

  @@map("event_logs")
}

// Compliance Log
model ComplianceLog {
  id              String   @id @default(uuid())
  action          String
  actionType      String?
  entityType      String
  entityId        String
  performedBy     String
  reason          String?
  ipAddress       String?
  userAgent       String?
  metadata        Json?
  createdAt       DateTime @default(now())

  @@map("compliance_logs")
}

// Outreach Drafts for external signals
model OutreachDraft {
  id              String          @id @default(uuid())
  signalId        String
  draftContent    String?         @db.Text
  editedContent   String?         @db.Text
  platform        String
  status          OutreachStatus  @default(PENDING_REVIEW)
  generatedBy     String?
  rejectionReason String?         @db.Text
  reviewedBy      String?
  reviewedAt      DateTime?
  sentAt          DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  signal          ExternalSignal  @relation(fields: [signalId], references: [id], onDelete: Cascade)

  @@map("outreach_drafts")
}

enum OutreachStatus {
  PENDING_REVIEW
  UNDER_REVIEW
  APPROVED
  EDITED
  REJECTED
  SENT
}

// Outreach Actions tracking
model OutreachAction {
  id                  String          @id @default(uuid())
  signalId            String
  draftId             String?
  action              String
  actionType          String?
  outcome             String?
  notes               String?         @db.Text
  clicksDetected      Boolean         @default(false)
  convertedToIntake   Boolean         @default(false)
  performedBy         String
  performedAt         DateTime        @default(now())
  createdAt           DateTime        @default(now())

  // Relations
  signal              ExternalSignal  @relation(fields: [signalId], references: [id], onDelete: Cascade)

  @@map("outreach_actions")
}
