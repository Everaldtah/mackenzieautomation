// Family Support Platform Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  intakes       Intake[]
  bookings      Booking[]
  referrals     Referral[]
  externalSignals ExternalSignal[]

  @@map("users")
}

enum UserRole {
  USER
  STAFF
  ADMIN
  SUPER_ADMIN
}

// Client Intake
model Intake {
  id              String    @id @default(uuid())
  userId          String
  clientFirstName String
  clientLastName  String
  clientEmail     String?
  clientPhone     String?
  dateOfBirth     DateTime?
  address         String?
  city            String?
  postcode        String?
  concerns        String    @db.Text
  serviceType     String?
  hearingDate     DateTime?
  courtName       String?
  urgencyLevel    Urgency   @default(MEDIUM)
  status          IntakeStatus @default(PENDING)
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("intakes")
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IntakeStatus {
  PENDING
  ASSESSMENT
  APPROVED
  REJECTED
  CLOSED
}

// Booking Management
model Booking {
  id          String        @id @default(uuid())
  userId      String
  clientId    String
  serviceType String
  date        DateTime
  time        String
  duration    Int           @default(60) // minutes
  status      BookingStatus @default(SCHEDULED)
  notes       String?       @db.Text
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("bookings")
}

enum BookingStatus {
  SCHEDULED
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// Referral System
model Referral {
  id                String         @id @default(uuid())
  userId            String
  referrerId        String?
  clientName        String
  clientEmail       String?
  clientPhone       String?
  serviceRequested  String
  referredTo        String
  referralDate      DateTime      @default(now())
  status            ReferralStatus @default(PENDING)
  responseReceived  Boolean       @default(false)
  notes             String?       @db.Text
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("referrals")
}

enum ReferralStatus {
  PENDING
  SENT
  ACCEPTED
  DECLINED
  FOLLOW_UP_REQUIRED
  CONVERTED
  CLOSED
}

// External Signals (Lead Discovery)
model ExternalSignal {
  id                  String           @id @default(uuid())
  userId              String?
  platformSource      String
  platformPostId      String?
  platformUrl         String?
  authorUsername      String?
  content             String           @db.Text
  contentHash         String?          @unique
  postedAt            DateTime?
  distressLevel       DistressLevel    @default(LOW)
  hearingMentioned    Boolean          @default(false)
  timeframeDetected   String?
  selfRepSignal       Boolean          @default(false)
  safeguardingKeywords String[]        @default([])
  urgencyScore        Int              @default(0)
  aiSummary           String?          @db.Text
  classification      SignalClassification?
  status              SignalStatus     @default(NEW)
  reviewedBy          String?
  reviewedAt          DateTime?
  processedAt         DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  user                User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  outreachDrafts      OutreachDraft[]
  outreachActions     OutreachAction[]

  @@map("external_signals")
}

enum DistressLevel {
  LOW
  MEDIUM
  URGENT
}

enum SignalClassification {
  FAMILY_NEED
  HOUSING_CRISIS
  FOOD_INSECURITY
  MENTAL_HEALTH
  CHILD_WELFARE
  DOMESTIC_ABUSE
  FINANCIAL_HELP
  ELDERLY_CARE
  DISABILITY_SUPPORT
  OTHER
}

enum SignalStatus {
  NEW
  DETECTED
  REVIEWING
  APPROVED
  REJECTED
  RESPONDED
  CONVERTED
  ARCHIVED
}

// Service Information
model Service {
  id                String    @id @default(uuid())
  name              String
  slug              String    @unique
  description       String    @db.Text
  category          String
  order             Int       @default(0)
  contactEmail      String?
  contactPhone      String?
  website           String?
  address           String?
  city              String?
  postcode          String?
  isActive          Boolean   @default(true)
  archetypeTarget   String?
  urgencyTrigger    Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("services")
}

// Analytics Tracking
model AnalyticsEvent {
  id          String   @id @default(uuid())
  eventType   String
  userId      String?
  metadata    Json?
  timestamp   DateTime @default(now())

  @@map("analytics_events")
}

// Event Log for audit trail
model EventLog {
  id          String   @id @default(uuid())
  eventType   String
  intakeId    String?
  referralId  String?
  signalId    String?
  bookingId   String?
  payload     Json?
  createdAt   DateTime @default(now())

  @@map("event_logs")
}

// Outreach Drafts for external signals
model OutreachDraft {
  id              String          @id @default(uuid())
  signalId        String
  content         String          @db.Text
  platform        String
  status          OutreachStatus  @default(PENDING_REVIEW)
  reviewedBy      String?
  reviewedAt      DateTime?
  sentAt          DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  signal          ExternalSignal  @relation(fields: [signalId], references: [id], onDelete: Cascade)

  @@map("outreach_drafts")
}

enum OutreachStatus {
  PENDING_REVIEW
  APPROVED
  EDITED
  REJECTED
  SENT
}

// Outreach Actions tracking
model OutreachAction {
  id              String          @id @default(uuid())
  signalId        String
  action          String
  outcome         String?
  notes           String?         @db.Text
  performedBy     String
  performedAt     DateTime        @default(now())
  createdAt       DateTime        @default(now())

  // Relations
  signal          ExternalSignal  @relation(fields: [signalId], references: [id], onDelete: Cascade)

  @@map("outreach_actions")
}
